{% extends "front/home.html.twig" %}

{% block main %}

	<h2>La recherche à partir de :
		{{ term }}</h2>
	{% if products is empty %}

		<h3>Aucun élément ne conrrepond à votre recherche</h3>

	{% else %}

		{% for product in products %}
			<h3>{{ product.name }}</h3>
			<p>{{ product.description }}</p>
			<h4>{{ product.price }}</h4>
			<h4>{{ product.stock }}</h4>
			<h4>{{ product.categorie.name }}</h4>
			<hr>
		{% endfor %}
	{% endif %}


{% endblock %}