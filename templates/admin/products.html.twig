{% extends  "admin/home.html.twig"%}

{% block main %}

    
            {% for product in products %}
                <h1>{{ product.name }}</h1>
                <p><h2>{{ product.description }}</h2></p>
                <h3>{{ product.price }}</h3>
                <h3>{{ product.stock }}</h3>
                <h4>{{ product.categorie.name }}</h4>
                    <a href="{{ path('admin_update_product', {'id' : product.id }) }}">Modifier le produit</a>
                    <a href="{{ path('admin_delete_product', {'id' : product.id}) }}">Supprimer le produit</a>
                <hr>
            {% endfor %}
        
	
{% endblock %}
